<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/nav_header_vertical_spacing"
    android:background="#ffff"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/profileTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/profilePic"

            android:layout_width="86dp"
            android:layout_height="63dp"

            android:layout_alignBottom="@+id/userName"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <RelativeLayout
            android:layout_width="201dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="38dp"
                android:textSize="15dp"
                android:textColor="#000"
                android:text="Name" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/userName"
                android:layout_marginTop="18dp" />


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Title" />

        <ImageView
            android:id="@+id/userPic"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:layout_alignBottom="@+id/userName"
            android:layout_alignParentTop="true"
            app:srcCompat="@mipmap/ic_launcher_round" />


        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="15dp"
            android:text="Ingredients" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/ingredientslist"
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:text="Ingredients List" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnContain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/sendMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message" />

        <Button
            android:id="@+id/Order"
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/sendMessage"
            android:text="Order" />

        <Button
            android:id="@+id/seeonmap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/Order"
            android:layout_alignBottom="@+id/Order"
            android:layout_alignParentEnd="true"
            android:text="See on Map" />

    </RelativeLayout>


</LinearLayout>