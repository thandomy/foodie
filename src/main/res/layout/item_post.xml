<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="297dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/star"
            android:layout_width="190dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/post_title"
            android:layout_alignLeft="@+id/post_title"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/post_title"
            android:layout_alignStart="@+id/post_title"
            android:layout_marginTop="13dp"
            android:layout_above="@+id/location" />

        <TextView
            android:id="@+id/post_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_above="@+id/post_body"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_body"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/post_title"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/post_title" />

      <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/post_title"
            android:layout_alignLeft="@+id/post_title"
            android:layout_alignStart="@+id/post_title"
            android:layout_alignRight="@+id/post_title"
            android:layout_alignEnd="@+id/post_title" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/post_title"
            android:layout_alignLeft="@+id/location"
            android:layout_alignStart="@+id/location"
            android:layout_alignRight="@+id/location"
            android:layout_alignEnd="@+id/location" />




    </RelativeLayout>

</android.support.v7.widget.CardView>
